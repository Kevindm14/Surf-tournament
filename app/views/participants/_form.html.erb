<div class="col-sm-6">
  <div class="panel">
    <div class="panel-heading">
      <h3 class="panel-title">Add participant</h3>
    </div>
    
    <%= form_for(@participant) do |p| %>
      <% @participant.errors.full_messages.each do |message| %>
        <p class="error-message" style="padding: 2px; background-color: red; display: table;"><%= message %><p>
      <% end %>
    <!--Block Styled Form -->
    <!--===================================================-->
      <div class="panel-body">
        <div class="row">
          <div class="col-sm-6">
            <div class="form-group">
              <label class="control-label">Name</label>
              <%= p.text_field :name, :class => "form-control" %>
            </div>
          </div>
          <div class="col-sm-6">
            <div class="form-group">
              <label class="control-label">Last Name</label>
              <%= p.text_field :last_name, :class => "form-control" %>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-sm-6">
            <div class="form-group">
              <label class="control-label">Gender</label>
              <%= p.select(:gender, options_for_select(["Male", "Female"]), :prompt=>"Please select gender...")%>
            </div>
          </div>
          <div>
            <h5 class="control-label">Categories</h5>
              <div class="col-sm-6">
            <div class="form-group">            
              <%= p.collection_check_boxes :category_ids, Category.all, :id, :name %>
            </div>
          </div>
          </div>

        </div>
      </div>
      <div class="panel-footer text-right">
        <%= p.submit %>
      </div>
      <% end %>
    <!--===================================================-->
    <!--End Block Styled Form -->

  </div>
</div>



