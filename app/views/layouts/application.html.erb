<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
	  <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SurftTournament</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div id="container" class="effect mainnav-lg">
		<!--NAVBAR-->
		<!--===================================================-->
		<header id="navbar">
			<div id="navbar-container" class="boxed">
				<!--Brand logo & name-->
				<!--================================-->
				<div class="navbar-header">
					<a href="index.html" class="navbar-brand">
						<div class="brand-title">
							<span class="brand-text">League Of Surf</span>
						</div>
					</a>
				</div>
				<!--================================-->
				<!--End brand logo & name-->
				<!--Navbar Dropdown-->
				<!--================================-->
				<div class="navbar-content clearfix">
          <div style="float: right;">
          	<% if current_user %>
            	<%= link_to 'Sign out', destroy_user_session_path, method: :delete, id: 'sign_out', :class => "btn btn-danger" %>
          	<% else %>
            	<%= link_to 'Login', new_user_session_path, :class => "btn btn-info" %>						
          	<% end %>
          </div>
				</div>
			</div>
		</header>
		<!--===================================================-->
		<!--END NAVBAR-->
		<div class="boxed">
			<!--CONTENT CONTAINER-->
			<!--===================================================-->
			<div id="content-container">
				<!--Page content-->
				<!--===================================================-->
				<div id="page-content">
					
					<div class="row">
						<p class="notice"><%= notice %></p>
            <p class="alert"><%= alert %></p>
						<div class="col-lg-12">
                <%= yield %>
						</div>
					</div>
				</div>
				<!--===================================================-->
				<!--End page content-->
			</div>
			<!--===================================================-->
			<!--END CONTENT CONTAINER-->
			<!--MAIN NAVIGATION-->
			<!--===================================================-->
			<nav id="mainnav-container">
				<div id="mainnav">
					<!--Shortcut buttons-->
					<!--================================-->
					<div id="mainnav-shortcut">
					</div>
					<!--================================-->
					<!--End shortcut buttons-->
					<!--Menu-->
					<!--================================-->
					<div id="mainnav-menu-wrap">
						<div class="nano">
							<div class="nano-content">
								<ul id="mainnav-menu" class="list-group">									
						
									<!--Menu list item-->
									<li class="active-link">
										<%= link_to 'Tournaments', tournaments_path, :class => "fa fa-dashboard" %>
									</li>
									
									<li class="active-link">
										<%= link_to 'Participants', participants_path, :class => "fa fa-dashboard" %><br>
									</li>

									<li class="list-divider"></li>

                  <!--Menu list item-->
									<li>
									</li>

								</ul>
							</div>
						</div>
					</div>
					<!--================================-->
					<!--End menu-->
				</div>
			</nav>
			<!--===================================================-->
			<!--END MAIN NAVIGATION-->
		</div>
	</div>
	<!--===================================================-->
	<!-- END OF CONTAINER -->
  </body>
</html>

