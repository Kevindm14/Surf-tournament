<%= form_for [@tournament, @category, @group] do |group| %>
  <div class="col-sm-12">
    <div class="panel">
      <div class="panel-heading">
        <h3 class="panel-title"><%= @group.name %></h3>
      </div>
      <div class="panel-body">
        <div class="table-responsive">
          <table class="table table-striped">
            <thead>
              <tr>
                <th>Participants</th>
                <th>Wave 1</th>
                <th>Wave 2</th>
                <th>Wave 3</th>
                <th>Wave 4</th>
                <th>Wave 5</th>
                <th>Wave 6</th>
                <th>Wave 7</th>
                <th>Wave 8</th>
                <th>Wave 9</th>
                <th>Wave 10</th>
                <th>Final</th>
              </tr>
            </thead>

            <tbody>
              <% @group.participants.each do |participant| %>
                <tr>
                  <td><%= participant.name %></td>
                  <%= group.fields_for :scores do |tc| %>
                    <td><%= tc.text_field :points, style: "width: 40px;" %></td>
                  <% end %>
                </tr>
              <% end %>
            </tbody>
        </table>
      </div>
    </div>
  </div>
  <%= group.submit value: "Quality!", class: "btn btn-success", style: "float: right;" %>
</div>
<% end %>

