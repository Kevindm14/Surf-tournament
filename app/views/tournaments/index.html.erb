<div id="page-title">
  <h1 class="page-header text-overflow">Tournaments</h1>
  <div class="searchbox">
    <div class="input-group custom-search-form">
      <% if can? :create, @tournament %>
        <%= link_to 'Create tournament', new_tournament_path, :class => "btn btn-primary", :style => "float: right;" %>
      <% end %>
      <span class="input-group-btn">
        <button class="text-muted" type="button"><i class="fa fa-search"></i></button>
      </span>
    </div>
  </div>
</div>

<% @tournaments.each do |tournament| %>
  <div class="col-sm-4">
    <div class="panel">
      <div class="panel-heading">
        <h3 class="panel-title">
          <%= tournament.name %>
          <% tournament.categories.each do |category| %>
            <td><%= link_to category.name, tournament_category_path(tournament, category), :class => "btn-sm btn-success" %></td>
          <% end %>
        </h3>
      </div>
      <div class="panel-body">
        <div class="table-responsive">
          <%= link_to 'Edit', edit_tournament_path(tournament) %>
        </div>
        <div class="list-divider"></div>
        <%= link_to 'Show tournament', tournament %>
      </div>
    </div> 
  </div>
<% end %>