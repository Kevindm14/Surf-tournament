<table>
  <tr>
    <th>Name<th>
    <th>Place</th>
    <th>Start Date</th>
    <th>Final Date</th>
    <th>Category</th>
    <th>Participants for group</th>
  </tr>

  <% @tournaments.each do |tournament| %>
    <tr>
      <td><%= tournament.name  %><td>
      <td><%= tournament.place %></td>
      <td><%= tournament.start_date %></td>
      <td><%= tournament.final_date %></td>
      <% tournament.categories.each do |category| %>
        <td><%= category.name %></td>
      <% end %>
      <% tournament.tournament_categories.each do |participant| %>
        <td><%= participant.participants_per_group %></td>
      <% end %>
      <td><% if can? :update, tournament %> <%= link_to 'Edit', edit_tournament_path(tournament) %><% end %></td>
      <td><% if can? :destroy, tournament %> <%= link_to 'Delete', tournament, method: :delete, data: { confirm: 'Â¿Are you sure?'} %><% end %></td>
    </tr>
  <% end %>
    <% if can? :create, @tournament %>
      <%= link_to 'Create tournament', new_tournament_path %>
    <% end %>
</table>
