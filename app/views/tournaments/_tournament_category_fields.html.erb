<div class="nested-fields">
  <label>Category</label>
  <%= f.select(:category_id, options_from_collection_for_select(Category.all, :id, :name), :prompt=>"Please select...") %>  
  <label>Participants per group: </label>
  <%= f.select(:participants_per_group, options_for_select(2..10),:prompt=>"Please select...", class: "form-control")%>
  <%= link_to_remove_association "Remove", f, class: "btn-sm btn-danger" %>
</div>